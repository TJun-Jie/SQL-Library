extends layout.pug
block content
    head
        title Library App
        link(href="/static/stylesheets/style.css" rel="stylesheet")
    body
        h1 Library App
        div
            ul.index
                li
                    p
                        a.button(href="/books/new") Create a book
                li
                    form.search(action="/books/search" method="get")
                            input(placeholder="Search for books..." name="search" title="search" id="search")
                            button(type="submit") Search   
            
            table
                thead
                    tr
                        th Title
                        th Author
                        th Genre
                        th Year
                tbody
                    each book in books
                        tr
                            td
                                a(href=`/books/${book.id}`) #{book.title}
                            td=book.author
                            td=book.genre
                            td=book.year
            div.pagination
                - var n = 1;
                ul
                    while n <= maxPages
                        li
                            a(href=`/books/page/${n}`) #{n++}
                    
            
                            

